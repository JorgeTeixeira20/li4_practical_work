@page "/register"

<h1>Registar</h1>

<form action="/register" method="post" asp-modal="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <p>Endereço de e-mail:</p>
                <input type="email" name="email" placeholder="Endereço de e-mail" class="form-control">

                <p>Senha:</p>
                <input type="password" name="password" placeholder="Senha" class="form-control">

                <p>Confirmar senha:</p>
                <input type="password" name="confirmPassword" placeholder="Confirmar senha" class="form-control">
            </div>

            <div class="modal-footer">
                <input type="submit" value="Registar" class="btn btn-primary">
            </div>
        </div>
    </div>

    <style>
        .modal-dialog {
            background-color: #ffffff;
            border: 1px solid #ccc;
        }

        .modal-body {
            padding: 20px;
        }

        .form-control {
            font-size: 16px;
            color: #333;
        }

        .btn-primary {
            background-color: #007bff;
            color: #ffffff;
        }
    </style>
</form>