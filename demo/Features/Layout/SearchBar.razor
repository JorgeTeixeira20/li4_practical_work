@page "/searchbar"
@using BlazorServerAutheticationAndAuthorization.Authetication
@using DataLayer.Utilizador
@inject IJSRuntime js
@inject IUtilizadorRepository _db
@inject NavigationManager navManager
@inject AuthenticationStateProvider authStateProvider

<AuthorizeView Roles="Client">
    <Authorized>
        <div class="search-bar">
            <label for="userNameSearch"></label>
            <input type="text" class="search-input" placeholder="Search..." @bind="userNameSearch">
            <button type="submit" class="search-button" @onclick="Search">
                <svg class="search-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none"
                     stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="11" cy="11" r="8" />
                    <line x1="21" y1="21" x2="16.65" y2="16.65" />
                </svg>
            </button>
        </div>
    </Authorized>
    <NotAuthorized>
        <h2>Not authorized</h2>
    </NotAuthorized>
</AuthorizeView>

@code {
    private string userNameSearch;

    private async Task Search()
    {
        UtilizadorModel userFounded = await _db.Find(userNameSearch);
        var authState = await authStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        string stateUsername = user.Identity.Name;

        if (userFounded == null)
        {
            await js.InvokeVoidAsync("alert", "utilizador não encontrado.");
            return;
        }
        if (userFounded.username.Equals(stateUsername))
        {
            navManager.NavigateTo("/perfil");
            return;
        }

        navManager.NavigateTo($"/perfilpublico/{userNameSearch}");
        userNameSearch = string.Empty;
        return;
    }
}