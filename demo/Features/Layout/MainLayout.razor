@page "/mainlayout"
@inherits LayoutComponentBase

<AuthorizeView Roles="Client">
    <Authorized>
        <div class="page" style="background-color: #ccc;">
            <div class="sidebar">
                <NavMenu />
            </div>

            <main>
                <div class="top-row">
                    <a href="/" class="brand">Time Treasures</a>
                </div>

                <article class="content px-4">
                    @Body
                </article>
            </main>
        </div>

        <div id="blazor-error-ui">
            An unhandled error has occurred.
            <a href="" class="reload">Reload</a>
            <a class="dismiss">🗙</a>
        </div>
    </Authorized>
    <NotAuthorized>
        <h1>Meu menino não estás loggado</h1>
    </NotAuthorized>
</AuthorizeView>

