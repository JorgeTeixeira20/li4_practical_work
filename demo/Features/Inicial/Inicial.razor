@page "/"
@layout SpecialLayout


    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title">Bem-vindo</h1>
            </div>
            <div class="modal-body">
                <div class="form-group text-center">
                    <button class="btn btn-primary custom-button" @onclick="NavigateToRegister">Registar</button>
                </div>

                <div class="form-group text-center">
                    <button class="btn btn-success custom-button" @onclick="NavigateToLogin">Entrar</button>
                </div>
            </div>
        </div>
    </div>


<style>
    .modal-dialog {
        background-color: #ffffff;
        border: 1px solid #ccc;
        max-width: 600px;
        margin: 50px auto; /* Center the modal */
    }

    .modal-body {
        padding: 20px;
    }

    .modal-footer {
        padding: 20px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-control {
        font-size: 16px;
        color: #333;
    }

    .modal-title {
        margin: 0;
    }

    .modal-header {
        background-color: #f7f7f7;
        border-bottom: 1px solid #ccc;
        padding: 10px;
    }

    .btn-primary,
    .btn-success {
        width: 150px; /* Set the button width */
        height: 50px; /* Set the button height */
        font-size: 18px; /* Set the font size */
    }

    .btn-primary {
        background-color: #007bff;
        color: #ffffff;
    }

    .btn-success {
        background-color: #28a745;
        color: #ffffff;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }

    .btn-success:hover {
        background-color: #218838;
    }

    hr {
        margin-top: 20px;
        margin-bottom: 20px;
        border: 0;
        border-top: 1px solid #ccc;
    }
</style>

@code {
    @inject NavigationManager NavigationManager

    private void NavigateToRegister()
    {
        NavigationManager.NavigateTo("/registar");
    }

    private void NavigateToLogin()
    {
        NavigationManager.NavigateTo("/entrar");
    }
}
