@page "/leilao/{cardId}"

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <img src="https://cdn.discordapp.com/attachments/816683287648927746/1197589413283237938/m128238-0008_collection_upright_landscape.png?ex=65bbd10e&is=65a95c0e&hm=24edae01cfa54c8a512163313024cb99155684ad0deb0b17a1161bbfe46129d6&" alt="Luisinho" class="card-img-top img-fluid" style="width: 100%; height: 100%; object-fit: contain; border-radius: 3%;">
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Relogio bué caro</h5>
                    <p class="card-text">
                        Rel muito bonito
                    </p>
                    <ul class="list-group">
                        <li class="list-group-item">Id: @CardId</li>
                        <li class="list-group-item">Marca: Rolex</li>
                        <li class="list-group-item">Modelo: Oyster</li>
                        <li class="list-group-item">Ano: 1999</li>
                        <li class="list-group-item">Cor: Ouro amarelo</li>
                        <li class="list-group-item">Condição: Muito bacano</li>
                    </ul>
                    <div class="card-footer">
                        <p class="text-muted">Lance atual: € 10 000</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-6">
            <a href="/licitacao/@CardId" class="btn btn-primary">Nova Licitação</a>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Licitação anterior</h5>
                    <p class="card-text">licitação 1 ......</p>
                    <p class="card-text">licitação 2 ......</p>
                    <p class="card-text">licitação 3 ......</p>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string CardId { get; set; }
}


